<div id="loginform">
  <h1 class="page-header">Login</h1>
  <form class="form" role="form">
    <div class="form-group text-center">
      <img class="align" src="static/logo-login.png" />
    </div>
    <div class="form-group text-center">
      <input id="login" type="text" class="form-control align" placeholder="Username" value="" />
    </div>
    <div class="form-group text-center">
      <input id="password" type="password" class="form-control align" placeholder="Password" value="" />
    </div>
    <div class="form-group text-center">
      <button id="user" type="button" class="btn btn-primary align">
        Login
      </button>
    </div>
    <div class="form-group text-center">
      <button id="guest" type="button" class="btn btn-primary align" style="display:none;">
        Log me as Guest
      </button>
    </div>
  </form>
</div>
